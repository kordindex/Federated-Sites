---
import '@fontsource-variable/inter';
import '@fontsource/playfair-display/700.css';
import '@fontsource/playfair-display/900.css';

---
<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Playfair Display';
    --aw-color-primary: rgb(181 147 83);
    --aw-color-secondary: rgb(155 124 64);
    --aw-color-accent: rgb(181 147 83);
    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(208 212 219);
    --aw-color-text-muted: rgb(208 212 219);
    --aw-color-bg-page: rgb(27 38 59);
    --aw-color-bg-page-dark: rgb(15 22 35);
    ::selection {
      background-color: rgb(181 147 83);
      color: white;
    }
  }
  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Playfair Display';
    --aw-color-primary: rgb(181 147 83);
    --aw-color-secondary: rgb(155 124 64);
    --aw-color-accent: rgb(181 147 83);
    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(208 212 219);
    --aw-color-text-muted: rgb(208 212 219);
    --aw-color-bg-page: rgb(15 22 35);
    ::selection {
      background-color: rgb(181 147 83);
      color: white;
    }
  }
</style>