---
import Button from '~/components/ui/Button.astro';
import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  id,
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<section
  class="relative flex items-center not-prose md:-mt-[76px]""
  style="background: radial-gradient(circle at 10% 20%, rgba(181, 147, 83, 0.06) 0%, transparent 50%);"
  {...id ? { id } : {}}
>
  <!-- Background slot -->
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : null}
    </slot>
  </div>

  <div class="relative w-full max-w-7xl mx-auto px-6 sm:px-8">
    <div class="pt-[76px] md:pt-[96px] pb-16 md:pb-24">

      <!-- Trust Badge -->
      <div class="inline-flex gap-4 mb-8 px-5 py-3 border border-white/10 bg-white/5 text-sm text-slate-300 tracking-wide intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
        âœ“ Certified Executive Coaches | 15+ Years Enterprise Leadership | 100% Confidential
      </div>

      <!-- Tagline -->
      {tagline && (
        <p
          class="text-sm font-bold tracking-widest uppercase text-primary mb-4 intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
          set:html={tagline}
        />
      )}

      <!-- Title -->
      {title && (
        <h1
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold font-heading uppercase leading-none tracking-tighter mb-6 text-white intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
          set:html={title}
        />
      )}

      <!-- Subtitle -->
      {subtitle && (
        <p
          class="text-lg md:text-xl text-slate-300 max-w-2xl mb-8 leading-relaxed intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
          set:html={subtitle}
        />
      )}

      <!-- Actions -->
      {actions && (
        <div class="flex flex-col sm:flex-row gap-4 mb-16 intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
          {Array.isArray(actions) ? (
            actions.map((action) => (
              <Button
                {...(action || {})}
                class="rounded-none px-8 py-4 text-sm font-bold tracking-widest uppercase"
              />
            ))
          ) : (
            <Fragment set:html={actions} />
          )}
        </div>
      )}

      {content && <Fragment set:html={content} />}

      <!-- ROI Matrix -->
      <slot name="roi" />

    </div>
  </div>
</section>