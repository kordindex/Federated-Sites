<script>
        // ─── Quiz ────────────────────────────────────────────────────────────────
        class CoherenceQuiz {
            constructor() {
                this.currentQuestion = 0;
                this.answers = {};
                this.showResults = false;

                this.questions = [
                    {
                        id: 1,
                        title: "How Disengagement Is Interpreted",
                        question: "When disengagement shows up in your organization, it is most often understood as:",
                        options: [
                            { value: 'A', text: "A people or performance problem", subtext: "Leaders focus on attitude or drive through coaching, performance plans, or incentives.", weight: 1 },
