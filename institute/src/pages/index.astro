    <script>
        function switchBrand(brandId, el, borderColor) {
            // Update Tier 1 Active State
            document.querySelectorAll('.pillar').forEach(p => p.classList.remove('active'));
            el.classList.add('active');
            document.getElementById('global-nav').style.borderBottomColor = borderColor;

            // Update Site Content
            document.querySelectorAll('.site-section').forEach(s => s.classList.remove('active'));
            document.getElementById(brandId === 'institute' ? 'institute' : brandId === 'coherence' ? 'coherence' : 'site-coaching').classList.add('active');
            
            window.scrollTo(0, 0);
        }
    </script>
