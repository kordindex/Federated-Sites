    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&family=Playfair+Display:ital,wght@0,700;0,900;1,700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-mist: #EAEAEA;
            --gold-deep: #9C7E41;
            --gold-bright: #B59353;
            --ink: #1A1C1E;
            --charcoal: #333639;
            --navy: #1B263B;
            --silver-border: #D1D1D1;
            --card-white: #FFFFFF;
            --transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Inter', sans-serif; background: var(--bg-mist); color: var(--ink); overflow-x: hidden; }
        
        /* Typography Rules per Brand */
        .serif { font-family: 'Playfair Display', serif; text-transform: uppercase; }
        .sans { font-family: 'Inter', sans-serif; text-transform: uppercase; letter-spacing: 1px; }

        /* --- TIER 1: FEDERATED DASHBOARD --- */
        .fed-nav {
            position: fixed; top: 0; width: 100%; z-index: 2000;
            display: grid; grid-template-columns: 1fr 1fr 1fr;
            height: 90px; background: #fff; border-bottom: 4px solid var(--ink);
        }
        .pillar {
            display: flex; flex-direction: column; justify-content: center; align-items: center;
            text-decoration: none; cursor: pointer; transition: var(--transition);
            border-bottom: 6px solid transparent; text-align: center;
        }
        .pillar span { font-size: 0.55rem; text-transform: uppercase; font-weight: 800; letter-spacing: 1px; opacity: 0.6; }
        .pillar h4 { font-size: 0.8rem; letter-spacing: 1px; margin-top: 4px; font-family: 'Inter', sans-serif; text-transform: uppercase;}

        .pillar-inst { background: var(--ink); color: #fff; }
        .pillar-cohe { background: var(--charcoal); color: #fff; }
        .pillar-coac { background: var(--gold-deep); color: #fff; }
        .pillar.active { border-bottom: 8px solid #fff; opacity: 1; }
        .pillar:not(.active) { opacity: 0.4; }

        /* --- TIER 2: SITE-SPECIFIC NAV --- */
        .site-header {
            position: fixed; top: 90px; width: 100%; z-index: 1000;
            background: rgba(255,255,255,0.95); backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--silver-border); height: 70px;
            display: flex; align-items: center; transition: var(--transition);
        }
        .site-nav-links { display: flex; gap: 2rem; list-style: none; font-size: 0.7rem; font-weight: 700; }
        .site-nav-links a { text-decoration: none; color: inherit; transition: 0.3s; }
        .site-nav-links a:hover { color: var(--gold-deep); }

        /* --- CONTENT CONTAINERS --- */
        .site-section { display: none; padding-top: 160px; min-height: 100vh; animation: fadeIn 0.5s ease; }
        .site-section.active { display: block; }

        .hero { padding: 80px 0; min-height: 70vh; display: flex; align-items: center; }
        .container { max-width: 1250px; margin: 0 auto; padding: 0 2rem; }
        .hero h1 { font-size: clamp(2.5rem, 6vw, 4.5rem); line-height: 1.1; margin-bottom: 1.5rem; }
        .hero p.lead { font-size: 1.25rem; max-width: 800px; margin-bottom: 2rem; }

        .grid-3 { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; padding: 60px 0; }
        .card { padding: 2.5rem; border: 1px solid var(--silver-border); background: rgba(255,255,255,0.05); }
        .card h3 { font-size: 1.2rem; margin-bottom: 1rem; color: var(--gold-deep); }
        .card ul { list-style: none; font-size: 0.9rem; opacity: 0.8; }
        .card li { margin-bottom: 0.5rem; }

        .btn { display: inline-block; padding: 1rem 2rem; background: var(--ink); color: #fff; text-decoration: none; font-weight: 800; font-size: 0.7rem; text-transform: uppercase; letter-spacing: 2px; }

        /* --- BRAND-SPECIFIC OVERRIDES --- */
        #site-institute h1, #site-institute h2, #site-institute h3 { font-family: 'Playfair Display', serif; }
        #site-coherence { background: var(--navy); color: #fff; }
        #site-coherence h1, #site-coherence h2, #site-coherence h3 { font-family: 'Inter', sans-serif; letter-spacing: -1px; }
        #site-coaching { background: #fff; }
        #site-coaching h1, #site-coaching h2, #site-coaching h3 { font-family: 'Playfair Display', serif; text-transform: none; }

        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

        /* --- FOOTER --- */
        footer { background: #111; color: #fff; padding: 60px 0; text-align: center; font-size: 0.8rem; }
        .fed-footer-link { color: var(--gold-bright); text-decoration: none; margin: 0 10px; font-weight: 700; }
    </style>
</head>
